// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  celular  String
  name     String
  address  String?
  password String?
  google   Boolean
  rol      Role    @default(USER)
  active   Boolean @default(true)
  sales    Sale[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  image       String
  brand       String?
  category    String
  description String
  price       Decimal
  stock       Int      @default(1)
  active      Boolean  @default(true)
  categoryrel Category @relation(fields: [category], references: [name])
  details     Detail[]
}

model Detail {
  id        Int     @id @default(autoincrement())
  idsale    Int
  idproduct Int
  quantity  Int
  price     Decimal
  total     Decimal
  sale      Sale    @relation(fields: [idsale], references: [id])
  product   Product @relation(fields: [idproduct], references: [id])
}

model Category {
  id       Int       @default(autoincrement())
  name     String    @id
  active   Boolean
  products Product[]
}

model Sale {
  id      Int      @id @default(autoincrement())
  iduser  Int
  details Detail[]
  user    User     @relation(fields: [iduser], references: [id])
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}
